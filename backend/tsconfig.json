{
    "compilerOptions": {
        "outDir": "./dist",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "module": "CommonJS",
        "target": "es2015",
        "sourceMap": true,
        "allowJs": true,
        "declaration": true,
        "checkJs": false,
        "strict": true,
        "alwaysStrict": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "strictNullChecks": false
    },
    "include": [
        "main.ts",
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "webpack.*.js"
    ]
}
